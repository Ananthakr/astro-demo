---
const menus = [{
  name:"home",
  path:"/"
},{
  name:"about",
  path:"/about"
}]
---
 <header>
    <nav>
      <ul>
        {
          menus.map((item)=> <li><h5> <a href={item.path}>{item.name}</a></h5></li>)
        }
      </ul>
    </nav>
 </header>


<style>
header {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rem;
}

header ul {
  list-style: none;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

header ul li {
  font-size: 1rem;
  font-weight: 500;
  line-height: 1.3;
  margin: 0.5rem 0.5rem 1rem 1rem;
}
</style>